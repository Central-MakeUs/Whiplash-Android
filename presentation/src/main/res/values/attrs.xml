<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 공통 버튼 -->
    <declare-styleable name="WhiplashCommonButton">
        <attr name="buttonBackgroundColor" format="color|reference" />
        <attr name="buttonText" format="string" />
        <attr name="buttonTextColor" format="color|reference" />
        <attr name="borderColor" format="color|reference" />
        <attr name="borderWidth" format="dimension" />
    </declare-styleable>

    <!-- 공통 editText -->
    <declare-styleable name="WhiplashEditText">
        <attr name="android:hint" />
        <attr name="android:text" />
        <attr name="isPassword" format="boolean" />
        <attr name="hasError" format="boolean" />
    </declare-styleable>

    <!-- 공통 searchBar -->
    <declare-styleable name="WhiplashSearchBar">
        <attr name="android:hint" />
        <attr name="android:text" />
    </declare-styleable>

    <!-- 공통 header -->
    <declare-styleable name="WhiplashHeader">
        <attr name="headerTitle" format="string" />
        <attr name="showLeftIcon" format="boolean" />
        <attr name="showRightIcon" format="boolean" />
        <attr name="leftIconType" format="enum">
            <enum name="back" value="0" />
        </attr>
        <attr name="rightIconType" format="enum">
            <enum name="close" value="0" />
        </attr>
    </declare-styleable>

    <!-- 공통 empty view -->
    <declare-styleable name="WhiplashEmptyView">
        <attr name="emptyTitle" format="string" />
        <attr name="emptyMessage" format="string" />
    </declare-styleable>

</resources>