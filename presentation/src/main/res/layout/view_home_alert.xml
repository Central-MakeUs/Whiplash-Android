<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_popup_border_8_radius"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivFirstAlert"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_warning_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFirstAlert"
            style="@style/subtitle6_b_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/grey_300"
            app:layout_constraintBottom_toBottomOf="@+id/ivFirstAlert"
            app:layout_constraintStart_toEndOf="@+id/ivFirstAlert"
            app:layout_constraintTop_toTopOf="@+id/ivFirstAlert"
            tools:text="예정 시간 1시간 전부터 인증 가능해요!" />

        <ImageView
            android:id="@+id/ivSecondAlert"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_warning_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivFirstAlert" />

        <TextView
            android:id="@+id/tvSecondAlert"
            style="@style/subtitle6_b_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="@color/grey_300"
            app:layout_constraintBottom_toBottomOf="@+id/ivSecondAlert"
            app:layout_constraintStart_toEndOf="@+id/ivSecondAlert"
            app:layout_constraintTop_toTopOf="@+id/ivSecondAlert"
            tools:text="‘알람 끄기’는 알람별로 3회까지 가능해요!" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>